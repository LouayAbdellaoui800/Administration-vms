{% extends 'base.html.twig' %}

{% block title %}
    VMS - Virtual Machines Update
{% endblock %}

{% block body %}
    <div class="container-fluid" style="background-color: #000; height: 100vh; display: flex; justify-content: center; align-items: center;">
        <div class="row">
            <div class="col-md-6">
                <div class="card bg-dark text-white">
                    <div class="card-body">
                        <h1 class="text-center mb-4">Update Virtual Machine</h1>
                        {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.processors, { 'attr': {'class': 'form-control bg-dark text-white', 'placeholder': 'Processors'} }) }}
                        </div>
                        <div class="mb-3">
                            <div class="input-group">
                                {{ form_row(form.memory, { 'attr': {'class': 'form-control bg-dark text-white', 'placeholder': 'Memory', 'value': '0'} }) }}
                                <button class="btn btn-outline-secondary" type="button" id="incrementMemory">+1024</button>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">Update</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('incrementMemory').addEventListener('click', function() {
            var memoryInput = document.getElementById('{{ form.memory.vars.id }}');
            var currentValue = parseInt(memoryInput.value);
            var newValue = currentValue + 1024;
            memoryInput.value = newValue;
        });
    </script>
{% endblock %}
