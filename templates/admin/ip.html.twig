{# templates/vm_details.html.twig #}

{% extends '@EasyAdmin/layout.html.twig' %}

{% block body %}
    <div class="container">
        {% if virtualMachinesIp %}
            <h1>Virtual Machine Details</h1>
            <dl class="dl-horizontal">
                <dt>IP:</dt>
                <dd>{{ virtualMachinesIp.ip }}</dd>

            </dl>
        {% else %}
            <p>No details found for the virtual machine.</p>
        {% endif %}
    </div>
{% endblock %}
